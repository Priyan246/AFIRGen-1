# AFIRGen Frontend Environment Configuration
# Copy this file to .env and update with your values

# API Base URL - Backend API endpoint
# Development: http://localhost:8000
# Production: https://api.afirgen.com
# AWS ALB: https://afirgen-alb-123456.us-east-1.elb.amazonaws.com
API_BASE_URL=http://localhost:8000

# API Key for authentication - MUST match backend API_KEY
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-api-key-here

# Environment name (development, staging, production)
ENVIRONMENT=development

# Enable debug logging (true/false)
ENABLE_DEBUG=true

# Frontend port (default: 80)
FRONTEND_PORT=80

# Docker build options
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
