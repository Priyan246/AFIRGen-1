{
  "name": "afirgen-frontend",
  "version": "1.0.0",
  "description": "AFIRGen Frontend - Static HTML/CSS/JS application for FIR generation system",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "cssnano css/main.css dist/css/main.min.css && cssnano css/themes.css dist/css/themes.min.css",
    "build:js": "terser js/app.js js/api.js js/validation.js js/security.js js/ui.js js/storage.js js/state.js js/config.js -o dist/js/app.min.js --source-map --compress --mangle",
    "build:html": "html-minifier --collapse-whitespace --remove-comments --minify-css true --minify-js true -o dist/index.html index.html",
    "prebuild": "mkdir -p dist/css dist/js dist/lib dist/assets",
    "dev": "echo 'Use a live server for development (e.g., Live Server extension in VS Code)' && exit 1",
    "prepare": "husky"
  },
  "keywords": [
    "fir",
    "frontend",
    "static",
    "optimization"
  ],
  "author": "AFIRGen Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "cssnano": "^6.0.1",
    "cssnano-cli": "^1.0.5",
    "eslint": "^8.50.0",
    "fast-check": "^4.5.3",
    "html-minifier": "^4.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.3",
    "terser": "^5.20.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  }
}
