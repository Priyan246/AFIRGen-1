# AFIRGen Environment Configuration
# Copy this file to .env and fill in the values

# MySQL Database Configuration
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DB=fir_db

# Application Configuration
PORT=8000
FIR_AUTH_KEY=your-secure-auth-key-here
API_KEY=your-secure-api-key-here-min-32-chars

# Model Server Configuration
MODEL_SERVER_PORT=8001
ASR_OCR_PORT=8002

# CORS Configuration
# Comma-separated list of allowed origins (use * for development only)
# Production example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting Configuration
# Maximum number of requests per IP address within the time window
RATE_LIMIT_REQUESTS=100
# Time window in seconds for rate limiting
RATE_LIMIT_WINDOW=60

# Security Configuration
# Set to 'true' in production to enforce HTTPS
ENFORCE_HTTPS=false
# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_TIMEOUT=3600

# TLS/HTTPS Configuration
# Domain name for Let's Encrypt certificate (production only)
DOMAIN_NAME=yourdomain.com
# Email for Let's Encrypt notifications (production only)
LETSENCRYPT_EMAIL=admin@yourdomain.com

# Frontend Configuration
# API Base URL for frontend to connect to backend
# Development: http://localhost:8000
# Production: https://api.yourdomain.com or your AWS ALB URL
API_BASE_URL=http://localhost:8000
# Environment name (development, staging, production)
ENVIRONMENT=development
# Enable debug logging in frontend (true/false)
ENABLE_DEBUG=true
# Frontend port (default: 80)
FRONTEND_PORT=80

# Backup Configuration
# Number of days to retain backups (default: 7)
BACKUP_RETENTION_DAYS=7

# AWS Configuration (Production Only)
# AWS region for Secrets Manager and other services
AWS_REGION=us-east-1
# Set to 'true' to use AWS Secrets Manager for secrets (auto-detected in production)
# When enabled, secrets will be fetched from AWS Secrets Manager with fallback to env vars
USE_AWS_SECRETS=false
# AWS Secrets Manager secret names (optional - defaults to env var names)
# If using a secret bundle, specify the bundle name here:
# AWS_SECRET_BUNDLE_NAME=afirgen/production/secrets
